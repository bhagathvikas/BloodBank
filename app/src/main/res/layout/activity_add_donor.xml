<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dbg"
    android:backgroundTintMode="screen"
    android:backgroundTint="@color/lol"
    tools:context=".AddDonorActivity">
    <Button
        android:id="@+id/btnsubmit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:background="@drawable/shapes"
        android:text="Add Donor"
        android:clickable="true" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/etusername"
        android:hint="Email"
        android:inputType="textWebEmailAddress"
        android:padding="10dp"
        android:textColorHint="#000"/>

    <EditText
        android:id="@+id/etphonenumber"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/etemail"
        android:hint="PhoneNumber"
        android:inputType="number"
        android:padding="10dp"
        android:maxLength="10"
        android:textColorHint="#000"/>


    <EditText
        android:id="@+id/etusername"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="75dp"
        android:hint="Donor name"
        android:padding="10dp"
        android:textColorHint="#000" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BloodGroup:"
        android:textSize="25sp"
        android:textColor="#000"
        android:padding="5dp"
        android:id="@+id/etbloodgroup"
        android:layout_below="@+id/etphonenumber"

        />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"



        android:layout_below="@+id/etphonenumber"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="103dp"
        android:padding="20dp" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etbloodgroup"
        android:text="I want to donate blood "
        android:layout_marginTop="25sp"
        android:id="@+id/chckbox"
        />

</RelativeLayout>