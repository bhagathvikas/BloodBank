<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgadd"
    tools:context=".NeedBloodActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <Button
        android:id="@+id/btsubmit"
        android:layout_width="224dp"
        android:layout_height="53dp"
        android:layout_below="@+id/etage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shapes"
        android:text="Add Details" />

    <EditText
        android:id="@+id/etname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvname"
        android:inputType="text"
        android:padding="15dp"

        />

    <EditText
        android:id="@+id/etphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvphonenumber"
        android:inputType="number"
        android:maxLength="10"

        android:padding="15dp"

        />

    <EditText
        android:id="@+id/ethospital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvhospital"
        android:inputType="text"
        android:padding="15dp"

        />

    <EditText
        android:id="@+id/etage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvage"
        android:inputType="number"
        android:maxLength="2"
        android:padding="15dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="120dp"
        android:layout_height="wrap_content"


        android:layout_below="@+id/ethospital"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="190dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="103dp"
        android:padding="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter patient Details"
        android:textSize="35dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"

        />

    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110sp"
        android:text="Name:"
        android:textSize="25sp"
        android:textColor="#000"


        />

    <TextView
        android:id="@+id/tvphonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etname"
        android:text="Phone Number:"
        android:padding="5dp"
        android:textSize="25sp"
        android:textColor="#000"


        />

    <TextView
        android:id="@+id/tvhospital"
        android:layout_width="110dp"
        android:layout_height="37dp"
        android:layout_below="@+id/etphone"
        android:text="Hospital:"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="25sp"


        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ethospital"
        android:padding="5dp"
        android:text="BloodGroup:"
        android:textColor="#000"
        android:textSize="25sp"

        />

    <TextView
        android:id="@+id/tvage"
        android:layout_width="107dp"
        android:layout_height="41dp"
        android:layout_below="@+id/spinner"
       android:text="Age:"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="25sp" />


</RelativeLayout>
    </ScrollView>




</RelativeLayout>

